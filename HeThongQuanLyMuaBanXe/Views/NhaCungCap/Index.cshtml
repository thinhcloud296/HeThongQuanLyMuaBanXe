@model List<HeThongQuanLyMuaBanXe.Models.NhaCungCap>

@{
    ViewBag.Title = "Danh Sách Nhà Cung Cấp";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="hero">
    <div class="hero-background"></div>
    <h1 class="animate__animated animate__fadeInDown">ĐỐI TÁC</h1>
</div>

<div class="container">
    <div class="search-box">
        <form method="get" action="@Url.Action("Index", "NhaCungCap")">
            <input type="text" name="search" class="search-input" placeholder="Tìm kiếm nhà cung cấp" value="@ViewBag.Search" />
            <button type="submit" class="search-btn">Tìm kiếm</button>
        </form>
    </div>

    <div class="row">
        @foreach (var nhaCungCap in Model)
        {
            <div class="col-md-4">
                <div class="service-card animate__animated animate__fadeInUp">
                    <h3 class="service-name">@nhaCungCap.TenNhaCungCap</h3>
                    <p><strong>Địa chỉ:</strong> @nhaCungCap.DiaChiNhaCungCap</p>
                  
                    <a href="@Url.Action("ChiTietNhaCungCap", "NhaCungCap", new { id = nhaCungCap.MaNhaCungCap })" class="btn-detail">Xem chi tiết</a>
                </div>
            </div>
        }
    </div>

    <div class="pagination">
        @if (ViewBag.Trang > 1)
        {
            <a href="@Url.Action("Index", "NhaCungCap", new { trang = ViewBag.Trang - 1, search = ViewBag.Search })" class="page-link">trước</a>
        }

        @for (int i = 1; i <= ViewBag.NoOfPages; i++)
        {
            <a href="@Url.Action("Index", "NhaCungCap", new { trang = i, search = ViewBag.Search })" class="page-link @(i == ViewBag.Trang ? "active" : "")">@i</a>
        }

        @if (ViewBag.Trang < ViewBag.NoOfPages)
        {
            <a href="@Url.Action("Index", "NhaCungCap", new { trang = ViewBag.Trang + 1, search = ViewBag.Search })" class="page-link">tiếp</a>
        }
    </div>
</div>

<style>
    .hero {
        position: relative;
        padding: 0;
        height: 100vh;
        text-align: center;
        color: white;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

    .hero-background {
        background-image: url('@Url.Content("~/images/blog2.jpg")');
        background-position: center;
        background-size: cover;
        height: 100%;
        position: absolute;
        top: 0; left: 0; right: 0; bottom: 0;
        z-index: -1;
    }

    .hero h1 {
        font-size: 60px;
        font-weight: 700;
        text-transform: uppercase;
        color: white;
        animation: fadeInDown 1s ease-out;
    }

    @@keyframes fadeInDown {
        0% { opacity: 0; transform: translateY(-50px); }
        100% { opacity: 1; transform: translateY(0); }
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 50px 20px;
    }

    .search-box {
        display: flex;
        justify-content: center;
        margin-bottom: 40px;
    }

    .search-input {
        width: 320px;
        padding: 15px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 8px;
        transition: box-shadow 0.3s ease;
    }

    .search-input:focus {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
    }

    .search-btn {
        padding: 15px 25px;
        background-color: #2c3e50;
        color: white;
        font-size: 16px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .search-btn:hover {
        background-color: #34495e;
    }

    .service-card {
        background-color: #fff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
        text-align: center;
        animation: fadeInUp 1s ease-out;
    }

    .service-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 12px 25px rgba(0, 0, 0, 0.1);
    }

    .service-name {
        font-size: 24px;
        font-weight: 600;
        color: #34495e;
        margin-bottom: 20px;
    }

    .service-card p {
        font-size: 16px;
        color: #7f8c8d;
        margin-bottom: 15px;
    }

    .btn-detail {
        padding: 12px 30px;
        background-color: #e74c3c;
        color: white;
        font-size: 16px;
        text-decoration: none;
        border-radius: 8px;
        transition: background-color 0.3s ease;
    }

    .btn-detail:hover {
        background-color: #c0392b;
    }

    .pagination {
    display: flex;
    justify-content: center;
    margin-top: 50px;
}

    .page-link {
        padding: 12px 20px;
        margin: 0 6px;
        background-color: #ecf0f1;
        color: #34495e;
        text-decoration: none;
        border-radius: 6px;
        transition: background-color 0.3s ease;
    }

    .page-link:hover {
        background-color: #bdc3c7;
    }

    .page-link.active {
        background-color: #3498db;
        color: white;
    }

    @@media (max-width: 768px) {
        .service-card { margin-bottom: 20px; }
        .search-input { width: 250px; }
        .page-link { padding: 10px 18px; }
    }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
