@model HeThongQuanLyMuaBanXe.Models.ThongTinDichVu

@{
    ViewBag.Title = "Chi Tiết Dịch Vụ";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #121212;
            color: #fff;
            margin: 0;
            padding: 0;
        }

        .service-detail {
            padding: 30px;
            background-color: #1e1e1e;
            border-radius: 15px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s, box-shadow 0.3s;
            animation: fadeInUp 1s ease-in-out;
            max-width: 900px;
            margin: 50px auto;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            min-height: 400px; 
            height: 100%;
            overflow: hidden;
        }

        .service-detail:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 25px rgba(0, 0, 0, 0.3);
        }

        .service-detail img {
            width: 100%;
            height: 300px;
            object-fit: cover;
            border-radius: 10px;
            transition: transform 0.3s ease;
            margin-bottom: 20px;
        }

        .service-detail img:hover {
            transform: scale(1.05);
        }

        h1 {
            font-size: 2.5rem;
            text-transform: uppercase;
            color: #f39c12;
            text-align: center;
            margin-bottom: 20px;
            animation: fadeInDown 1s ease-in-out;
        }

        .service-info {
            margin-top: 20px;
            font-size: 1.2rem;
            line-height: 1.6;
            flex-grow: 1;
        }

        .service-info p {
            margin: 10px 0;
        }

        .back-btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1rem;
            text-transform: uppercase;
            background-color: #f39c12;
            color: #fff;
            border-radius: 5px;
            text-decoration: none;
            margin-top: 20px;
            transition: background-color 0.3s;
            align-self: center; 
            margin-left: auto;
            margin-right: auto;
        }

        .back-btn:hover {
            background-color: #e67e22;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        @@media (max-width: 768px) {
            .service-detail {
                padding: 20px;
                max-width: 100%;
            }

            h1 {
                font-size: 2rem;
            }

            .service-info {
                font-size: 1rem;
            }

            .service-detail img {
                height: 250px;
            }

            .back-btn {
                font-size: 0.9rem;
            }
        }
    </style>
</head>

<body>
    <section class="service-detail animate__animated animate__fadeInUp">
        <h1 class="animate__animated animate__fadeInDown">@Model.TenDichVu</h1>

        <div class="service-info">
            <img src="@Url.Content("~/Images/" + Model.AnhDichVu)" alt="@Model.TenDichVu">
            <p><strong>Mô tả:</strong> @Model.MoTaDichVu</p>
        </div>

        <a href="@Url.Action("Index", "DichVu")" class="back-btn">Quay lại danh sách dịch vụ</a>
    </section>
</body>
