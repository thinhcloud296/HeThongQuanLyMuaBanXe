@model HeThongQuanLyMuaBanXe.Models.Xe
@{
    ViewBag.Title = "ChiTietSanPham";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
    }

    .container {
        max-width: 1200px;
        margin: 20px auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .product-image-main {
        width: 100%;
        max-height: 500px;
        object-fit: contain;
        border-radius: 5px;
        background-color: #f0f0f0;
    }

    .product-thumbnails {
        display: flex;
        gap: 50px;
        margin-top: 10px;
        justify-content: center;
    }

    .product-thumbnail img {
        width: 100px;
        height: 100px;
        cursor: pointer;
        border-radius: 10px;
        transition: border 0.4s ease;
        object-fit: cover;
    }

        .product-thumbnail img:hover {
            border: 2px solid #007bff;
        }

    .text-danger {
        color: #dc3545;
    }

    .product-price {
        font-size: 1.5em;
        font-weight: bold;
        color: #333;
        text-align: right;
        margin-top: 15px;
    }

    .btn-custom {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 10px;
        font-weight: bold;
    }

    .status-spacing, .description-spacing {
        margin-top: 15px;
    }

    .separator {
        border-top: 1px solid #dee2e6;
        margin: 15px 0;
    }
</style>
<body>

    <div class="container">
        <div class="row">
            <!-- Main Image Section -->
            <div class="col-lg-7">
                <img id="mainImage" src="~/Images/@Html.DisplayFor(model => model.HinhAnh)" alt="2021 Ford GT Heritage Edition" class="img-fluid product-image-main" />
                <!-- Thumbnail Images Below Main Image -->
                <div class="product-thumbnails">
                    <div class="product-thumbnail">
                        <img src="~/Images/@Html.DisplayFor(model => model.HinhAnh)" alt="Thumbnail 1" onclick="changeImage(this)">
                    </div>
                    <div class="product-thumbnail">
                        <img src="~/Images/@Html.DisplayFor(model => model.HinhAnh2)" alt="Thumbnail 2" onclick="changeImage(this)">
                    </div>
                    <div class="product-thumbnail">
                        <img src="~/Images/@Html.DisplayFor(model => model.HinhAnh3)" alt="Thumbnail 3" onclick="changeImage(this)">
                    </div>
                    <div class="product-thumbnail">
                        <img src="~/Images/@Html.DisplayFor(model => model.HinhAnh4)" alt="Thumbnail 4" onclick="changeImage(this)">
                    </div>
                </div>
            </div>

            <!-- Product Details -->
            <div class="col-lg-5">
                <div class="text-danger text-center">
                    <h2> @Html.DisplayFor(model => model.TenXe)</h2>
                </div>


                <div class="product-price">@Html.DisplayFor(model => model.GiaBanXe) $</div>

                <!-- Order Buttons -->
                <div class="order-button-spacing">
                    <a href="/hopdong/index?MaXe=@Model.MaXe" class="btn btn-danger btn-custom">Đặt mua</a>
                </div>

                <!-- Product Status and Description -->
                <div class="status-spacing d-flex justify-content-between">
                    <div><b>Tình Trạng:</b></div>
                    <div>Mới, lịch sử rõ ràng</div>
                </div>

                <div class="separator"></div>

                <div class="description-spacing d-flex justify-content-between">
                    <div><b>Mô tả:</b></div>
                    <div>Xe đẹp, phiên bản giới hạn</div>
                </div>
            </div>
        </div>
    </div>

    @*JavaScript to handle image switching*@
    <script>
        function changeImage(element) {
            // Lấy đường dẫn ảnh từ thumbnail được click
            const newSrc = element.src;
            // Thay đổi ảnh chính với đường dẫn mới
            document.getElementById('mainImage').src = newSrc;
        }
    </script>

    <!-- Bootstrap JS (optional, only needed if you use interactive components like modals or tooltips) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

