                <div class="all-button">
                    <button>Shop all new in</button>
                </div>
            </div>
            <button id="left" onclick="changeSlide(-1)"><i class="fa-solid fa-arrow-left"></i></button>
            <button id="right" onclick="changeSlide(1)"><i class="fa-solid fa-arrow-right"></i></button>
        </div>
        <div id="list">
            <ul>
                <li><button onclick="indexNumber(0)"></button></li>
                <li><button onclick="indexNumber(1)"></button></li>
                <li><button onclick="indexNumber(2)"></button></li>
            </ul>
        </div>
    </div>}


