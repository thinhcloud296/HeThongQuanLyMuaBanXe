<div>
    @{
        if (@ViewBag.dsXeTheoHang != null && @ViewBag.dsXeTheoHang.Count > 0)
        {
            <div class="all-new-product" style="justify-content: space-around">

                @foreach (var row in @ViewBag.dsXeTheoHang)
                {
                    <div class="new-product">
                        <a href="@Url.Action("ChiTietSanPham", "Xe", new { id = row.MaXe })" style="text-decoration: none;">
                            <div class="new-img-product">
                                <img style="object-position: 0px;" id="Pic-3" src="~/Images/@row.HinhAnh" alt="@row.TenXe">
                                <div class="note-notif">
                                </div>
                            </div>
                        </a>
                        <div class="box-name-product">
                            <div class="name-product">
                                @row.TenXe
                            </div>
                            <div id="Prict-prod" class="price-product">
                                <span>@row.GiaBanXe $</span>
                            </div>
                            <div class="buttom-1">
                                <button type="button" onclick="window.location.href='@Url.Action("Add", "Favourite", new { id = row.MaXe })';">
                                    <i class="fa-solid fa-cart-plus"></i>
                                    <span>Thêm vào yêu thích</span>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="no-product">
                <p>No products available.</p>
            </div>
        }
    }

</div>
