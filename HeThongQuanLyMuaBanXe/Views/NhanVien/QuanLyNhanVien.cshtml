@model List<HeThongQuanLyMuaBanXe.Models.NhanVien>
@{
    ViewBag.Title = "QuanLyNhanVien";
    Layout = "~/Views/Shared/_LayoutNhanVien2.cshtml";
}


<!-- Page Content Holder -->
<div id="content">
    <div class="container">
        <div class="card text-center">
            <!-- Header -->
            <div class="card-header myCardHeader position-relative">
                <h3 class="text-center text-primary font-weight-bold">
                    Danh sách nhân viên
                </h3>
                <a href="@Url.Action("Register","User")" class="btn btn-primary position-absolute"
                   id="btnThem"
                   data-toggle="modal"
                   data-target="#myModal"
                   style="right: 10px; bottom: 10px;">
                    Thêm nhân viên
                </a>
            </div>

            <!-- Body -->
            <div class="card-body">
                <table class="table table-bordered">
                    <thead class="text-primary">
                        <tr>
                            <th style="width:10% ;">Mã nhân viên</th>
                            <th style="width:17% ;">Họ và tên</th>
                            <th style="width: 17%;">Email</th>
                            <th style="width:23% ;">Địa chỉ</th>
                            <th style="width: 11%;">Số điện thoại</th>
                            <th style="width: 12%;">Chức vụ</th>
                            <th style="width: 5%;">Sửa</th>
                            <th style="width: 5%;">Xóa</th>
                        </tr>
                    </thead>
                    <tbody id="tableDanhSach">
                        @foreach (var nv in Model)
                        {
                            <tr>
                                <td style="width:10% ;">@Html.DisplayFor(x => nv.MaNhanVien)</td>
                                <td style="width:17% ;">@Html.DisplayFor(x => nv.TenNhanVien)</td>
                                <td style="width: 17%;">@Html.DisplayFor(x => nv.EmailNhanVien)</td>
                                <td style="width:23% ;">@Html.DisplayFor(x => nv.DiaChiNhanVien)</td>
                                <td style="width: 11%;">@Html.DisplayFor(x => nv.SoDienThoaiNhanVien)</td>
                                @if (nv.VaiTro == "admin")
                                {
                                    <td style="width: 12%;">Quản lý</td>
                                }
                                else if (nv.VaiTro == "userKho")
                                {
                                    <td style="width: 12%;">Quản lý kho</td>
                                }
                                else
                                {
                                    <td style="width: 12%;">Quản lý đơn hàng</td>
                                }
                                <td style="width: 5%;"><a href="@Url.Action("EditNV","NhanVien",new {id=nv.MaNhanVien})" class="fa fa-cog"></a></td>
                                <th style="width: 5%;"><a href="@Url.Action("DeleteNV","NhanVien",new {id=nv.MaNhanVien})" class="fa fa-trash"></a></th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- Footer -->
            <div class="card-footer myCardFooter">
                <nav>
                    <ul class="pagination justify-content-center"
                        id="ulPhanTrang"></ul>
                </nav>
            </div>
        </div>
    </div>
</div>