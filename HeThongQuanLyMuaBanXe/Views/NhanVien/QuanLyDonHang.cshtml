
@{
    ViewBag.Title = "QuanLyDonHang";
    Layout = "~/Views/Shared/_LayoutNhanVien2.cshtml";
}

@{
    var hopDongList = ViewBag.HopDongList as List<HeThongQuanLyMuaBanXe.Models.HopDongMuaBan>;
    var khachHangList = ViewBag.KhachHangList as List<HeThongQuanLyMuaBanXe.Models.KhachHang>;
}

@model IEnumerable<HeThongQuanLyMuaBanXe.Models.HopDongMuaBan>


<!-- Page Content Holder -->
<div id="content">
    <div class="container">
        <div class="card text-center">
            <!-- Body -->
            <div class="card-body">                
                <table class="table table-bordered">
                    <thead class="text-primary">
                        <tr>
                            <th>Mã hợp đồng</th>
                            <th>Tên khách hàng</th>
                            <th>Số điện thoại</th>
                            <th>Email</th>
                            <th>Địa chỉ</th>
                            <th>Mã xe</th>
                            <th>Ngày ký</th>
                            <th>Số tiền</th>
                            <th>Trạng thái</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {

                            var khachHang = khachHangList.FirstOrDefault(k => k.MaKhachHang == item.MaKhachHang);

                            <tr>
                                <td>@item.MaHopDong</td>

                                <td>
                                    <input type="text" name="HoTenKhachHang" value="@(khachHang != null ? khachHang.HoTenKhachHang : "Không tìm thấy")" />
                                </td>

                                <!-- Số điện thoại  -->
                                <td>
                                    <input type="text" name="SoDienThoaiKhachHang" value="@(khachHang != null ? khachHang.SoDienThoaiKhachHang : "Không tìm thấy")" />
                                </td>

                                <!-- Email  -->
                                <td>
                                    <input type="email" name="EmailKhachHang" value="@(khachHang != null ? khachHang.EmailKhachHang : "Không tìm thấy")" />
                                </td>

                                <!-- Địa chỉ  -->
                                <td>@khachHang.DiaChiKhachHang</td>
                                <td>@item.MaXe</td>
                                <td>@item.NgayLapHopDong</td>
                                <td>@item.TongGiaTriHopDong</td>
                                <td>@item.TrangThaiHopDong</td>

                                <td>
                                    @if (item.TrangThaiHopDong == "Chưa phê duyệt")
                                    {
                                        <button class="btn btn-success" onclick="changeStatus('@item.MaHopDong', 'Đã phê duyệt')">Duyệt</button>
                                    }
                                    else
                                    {
                                        <button class="btn btn-warning" onclick="changeStatus('@item.MaHopDong', 'Chưa phê duyệt')">Chưa duyệt</button>
                                    }
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <script type="text/javascript">
function changeStatus(maHopDong, newStatus) {
    $.ajax({
        url: '@Url.Action("ChangeStatus", "NhanVien")',
        type: 'POST',
        data: {
            maHopDong: maHopDong,
            newStatus: newStatus
        },
        success: function (response) {
            if (response.success) {
               
                location.reload(); 
            } else {
                alert("Có lỗi xảy ra khi cập nhật trạng thái.");
            }
        },
        error: function () {
            alert("Không thể kết nối đến máy chủ.");
        }
    });
}
            </script>

            <style>
                a {
                    color: inherit !important; 
                    text-decoration: none !important; 
                }

                #sidebar {
                    min-width: 250px;
                    max-width: 250px;
                    background: rgb(52, 52, 52);
                    color: #fff;
                    transition: all 0.3s;
                }



                .container {
                    background-color: white;
                    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                    padding: 30px;
                    border-radius: 8px;
                }

                h3.text-center {
                    color: #007bff;
                    font-weight: bold;
                    margin-bottom: 20px;
                }

                .table {
                    margin-top: 20px;
                }

                .table-bordered th,
                .table-bordered td {
                    text-align: center;
                    vertical-align: middle;
                }

                .table th {
                    background-color: #007bff;
                    color: white;
                }

                .table-striped tbody tr:nth-of-type(odd) {
                    background-color: #f2f2f2;
                }

                .table-hover tbody tr:hover {
                    background-color: #e9ecef;
                }

                .btn-custom {
                    background-color: #28a745;
                    color: white;
                    border: none;
                    padding: 10px 20px;
                    border-radius: 5px;
                    cursor: pointer;
                }

                    .btn-custom:hover {
                        background-color: #218838;
                    }

                .pagination {
                    margin-top: 20px;
                    justify-content: center;
                }

                    .pagination .page-item .page-link {
                        color: #007bff;
                    }

                        .pagination .page-item .page-link:hover {
                            background-color: #007bff;
                            color: white;
                        }

                    .pagination .active .page-link {
                        background-color: #007bff;
                        color: white;
                    }
            </style>
        </div>
    </div>
</div>